#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR
for f in `cat tarballs`; do
  if [ -d $CACHE_DIR/$f ]; then
    echo "-----> Using cached version of $f"
    cd $CACHE_DIR/$f
    make install 2>&1 | indent
  else
    tar -C $CACHE_DIR -vxzf src/$f.tar.gz 
    cd $CACHE_DIR/$f
    if [ -f configure ]; then
      echo "-----> Configuring $f"
      ./configure --prefix=$BUILD_DIR 2>&1 | indent
    fi

    if [ -f Makefile ]; then
      echo "-----> Making $f"
      make 2>&1 | indent
      make install 2>&1 | indent
    fi
  fi
  cd $BUILD_DIR
done

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Making"
make 2>&1 | indent
