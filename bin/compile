#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR

for f in `cat tarballs`; do
  if [ -d $f ]; then
    echo "-----> Using cached version of $f"
  else
    tar vxfz $f.tar.gz
    cd $f
    if [ -f configure ]; then
      echo "-----> Configuring $f"
      ./configure --prefix=$1 2>&1 | indent
    fi

    if [ -f Makefile ]; then
      echo "-----> Making $f"
      make 2>&1 | indent
      make install 2>&1 | indent
    fi
    cd ..
  fi
done

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Making"
make 2>&1 | indent
