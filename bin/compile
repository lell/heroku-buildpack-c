#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

HOME=$HOME
mkdir -p $CACHE_DIR
mkdir -p $CACHE_DIR/src

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

for f in `cat $BUILD_DIR/tarballs`; do
  if [ -d $CACHE_DIR/src/$f ]; then
    echo "-----> Using cached version of $f"
    #cd $CACHE_DIR/src/$f
    #make install 2>&1 | indent
  else
    tar -C $CACHE_DIR/src/ -vxzf $BUILD_DIR/src/$f.tar.gz 2>&1 | indent
    cd $CACHE_DIR/src/$f

    if [ -f configure ]; then
      echo "-----> Configuring $f"
      ./configure --prefix=$CACHE_DIR 2>&1 | indent
    fi

    if [ -f Makefile ]; then
      echo "-----> Making $f"
      make 2>&1 | indent
      make install 2>&1 | indent
    fi

    find {bin,etc,include,lib,share} | cpio -pudm dest
  fi
done

cd $CACHE_DIR
rsync -av --progress . $BUILD_DIR --exclude src

cd $BUILD_DIR
# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Making"
make 2>&1 | indent
